<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.newsclientdemo.activity.MyActivity">

    <include
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/fragment_title"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/read_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_bar_ly"
        android:layout_below="@id/id_title"
        android:background="#666666"/>

    <include
        android:id="@+id/bottom_bar_ly"
        layout="@layout/button_bar_fragment"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
