<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC33"
    tools:context="com.example.newsclientdemo.activity.ReadContentActivity">


    <LinearLayout
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--
         android:text="第一章 钧天图显洛门殇"
        android:text="钧天图"
        android:text="作者：纳楼兰"
        android:text="更新时间：2016-07-13 21：54：10"
        android:text="字数：2240"
        -->
        <TextView
            android:id="@+id/read_con_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:textSize="26sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/read_con_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                />

            <TextView
                android:id="@+id/read_con_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/read_con_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/read_con_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn"
        android:layout_below="@+id/tv">

        <TextView
            android:id="@+id/read_con_con"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:lineSpacingExtra="5dp"
            android:layout_margin="20dp"

            />

    </ScrollView>



    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#88ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/read_btn_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="上一章"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/read_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="下一章"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
